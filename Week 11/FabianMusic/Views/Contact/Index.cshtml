@model ContactModel
@{
    ViewData["Title"] = "Contact";
}

<div class="container">
<h1 class="mt-3 mb-4">@ViewBag.Title</h1>
<br/>
<h2>FabianMusic:</h2>
<br/>
<p>121 Main Avenue Unit 3 Cleveland, OH, 44133<p/>
<p>Phone #: (216)555-6666</p>
<p>Email: FabianMusic@gmail.com</p>
<p>Hours of Operation:</p>
<p>Mon-Sat: 10AM - 5PM</p>
<br/>
<br/>
<p>Fill in your contact information in the form bellow:</p>
<form asp-action="Index" method="post">
    <div class="row">
        <label asp-for="FirstName" class="col-md-3 col-form-label">First Name: </label>
        <div class="col-md-3">
            <input asp-for="FirstName" class="form-control"/>
        </div>
        <span asp-validation-for="FirstName" class="col text-danger"></span>
    </div>

        <div class="row">
            <label asp-for="LastName" class="col-md-3 col-form-label">Last Name: </label>
            <div class="col-md-3">
                <input asp-for="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="col text-danger"></span>
        </div>

        <div class="row">
            <label asp-for="Address" class="col-md-3 col-form-label">Address: </label>
            <div class="col-md-3">
                <input asp-for="Address" class="form-control" />
            </div>
            <span asp-validation-for="Address" class="col text-danger"></span>
        </div>

        <div class="row">
            <label asp-for="Phone" class="col-md-3 col-form-label">Phone: </label>
            <div class="col-md-3">
                <input asp-for="Phone" class="form-control" />
            </div>
            <span asp-validation-for="Phone" class="col text-danger"></span>
        </div>

        <div class="row">
            <label asp-for="Email" class="col-md-3 col-form-label">Email: </label>
            <div class="col-md-3">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="col text-danger"></span>
        </div>
</form>
    <footer class="border-top footer text-muted">

        &copy; 2023 - FabianMusic - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

    </footer>
</div>